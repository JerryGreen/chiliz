{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
      ]
    },
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    // "lib": [
    //   "dom",
    //   "dom.iterable",
    //   "scripthost",
    //   "es2015"
    // ],
    // "types": [
    //   "node",
    //   "jest",
    // ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "lambda",
    "docs",
    "public"
  ]
}
