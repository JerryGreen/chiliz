{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2018",
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
